{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "astro",
  "buildCommand": "yarn build",
  "installCommand": "corepack use yarn",
  "rewrites": [{ "source": "/(.*)", "statusCode": 404, "destination": "/404.html" }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    },
    {
      "source": "/(.*).(js|css|woff2)",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=604800, s-maxage=604800"
        }
      ]
    },
    {
      "source": "/favicon.svg",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=604800, s-maxage=604800"
        }
      ]
    }
  ]
}
