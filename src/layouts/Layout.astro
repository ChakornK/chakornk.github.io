---
import "@/styles/global.css";
import Navbar from "@/components/Navbar.astro";
import { ClientRouter } from "astro:transitions";

import { SEO } from "astro-seo";
import { getImagePath } from "astro-opengraph-images";

const { title, description } = Astro.props;
const { url, site } = Astro;
const ogImage = getImagePath({ url, site });
---

<!doctype html>
<html lang="en" transition:animate="none" class="overflow-y-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SEO
      title={title ? `${title} | ChakornK` : "ChakornK"}
      description={description || ""}
      openGraph={{
        basic: {
          title: title || "Chakorn Kungsanarux",
          type: "website",
          image: ogImage,
        },
        optional: {
          description,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage,
      }}
    />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <ClientRouter fallback="swap" />

    <link rel="preload" href="/JetBrainsMono-TT.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/SpaceGrotesk-TT.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  </head>
  <body class="h-dvh pt-18 flex flex-col overflow-y-auto p-8 sm:p-16">
    <Navbar />
    <div class="mx-auto w-full max-w-2xl">
      <slot />
    </div>
  </body>
</html>
